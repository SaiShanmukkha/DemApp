@model DemApp.Models.ViewModels.ExpenseVM

<form method="post" asp-action="UpdatePost">
    <input asp-for="Expense.Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense:</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Expense.ExpenseName"></label>
                    </div><div class="col-6">
                        <label asp-for="Expense.Amount"></label>
                    </div><div class="col-6">
                        <label asp-for="Expense.ExpenseType"></label>
                    </div>
                </div> <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Expense.ExpenseName" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                    </div><div class="col-4">
                        <input asp-for="Expense.Amount" class="form-control" type="number" />
                        <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                    </div><div class="col-4">
                        <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>--Select Expense Type--</option>
                        </select>
                        <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
                    </div>
                </div> <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info w-75 text-white" value="Update" />
                    </div><div class="col-6">
                        <a class="nav-link text-white w-75 btn btn-success" asp-area="" asp-controller="Expense" asp-action="Index">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


