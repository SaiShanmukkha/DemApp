@model IEnumerable<DemApp.Models.Expense>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List:</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Add New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount($)
                    </th><th>
                        Expense Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="25%">@expense.ExpenseName</td>
                        <td width="25%">@expense.Amount</td>
                        <td width="25%">@expense.ExpenseType.ExpenseTypeName</td>
                        <td width="20%">
                            <div class="text-center btn-group w-100">
                                <a class="btn btn-primary mx-1 text-white" asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id">Update</a>
                                <a class="btn btn-danger mx-1 text-white" asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }



            </tbody>
        </table>
            }
            else
            {
                <div class="text-center">No Expenses</div>
            }
</div>

