@model IEnumerable<DemApp.Models.ExpenseType>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Expense Type List:</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Add New Expense Type</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Type Name
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var expenseType in Model)
                {
                    <tr>
                        <td width="35%">@expenseType.ExpenseTypeName</td>
                        <td width="30%">
                            <div class="text-center btn-group w-100">
                                <a class="btn btn-primary mx-1 text-white" asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expenseType.Id">Update</a>
                                <a class="btn btn-danger mx-1 text-white" asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expenseType.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">No Expense Types</div>
    }
</div>

